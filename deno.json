{
	"tasks": {
		"dev": "deno run -A --inspect scripts/dev.js",
		"check": "deno run --allow-env --allow-read npm:typescript@5.0.2/tsc --noEmit -p ./jsconfig.json"
	},
	"importMap": "importmap.json",
	"fmt": {
		"files": {
			"include": [
				"gameServer/",
				"scripts/"
			]
		},
		"options": {
			"indentWidth": 4,
			"useTabs": true,
			"lineWidth": 120
		}
	}
}
